<div class="header-grid">
    <div id="branding">
        <h1>OmniVus.</h1>
        <p>IT Service & Tecchnology</p>
    </div>
    <nav id="top-menu">
    @if (SignInManager.IsSignedIn(User)) {
        <a asp-controller="Profile" asp-action="Index" asp-route-id="@User.FindFirst("UserId").Value">@await ProfileManager.DisplayNameAsync(User.FindFirst("UserId").Value)</a>
        <div class="social">
            <a asp-controller="Profile" asp-action="Index" asp-route-id="@User.FindFirst("UserId").Value">Profile</a>
            <a asp-controller="Auth" asp-action="SignOut">Sign Out</a>
        </div>
    }
    else {
        <a href="mailto:info@domain.com">support@domain.com</a>
        <div class="social">
            <a href="https://facebook.com">facebook</a>
            <a href="https://youtube.com">youtube</a>
            <a href="https://twitter.com">twitter</a>
            <a href="https://linkedin.com">linkedin</a>
        </div>
    }
    </nav>
    <nav id="main-menu">
    <div class="menu-items">
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a asp-controller="Home" asp-action="Services">Services</a>
        <a asp-controller="Home" asp-action="Contact">Contact</a>
    </div>
    @if (!SignInManager.IsSignedIn(User)) {
            <a asp-controller="Auth" asp-action="SignIn" class="btn btn-main">Sign In</a>
        }
    </nav>
</div>